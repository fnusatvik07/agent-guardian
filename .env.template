# Environment Configuration for Governance Agent
# Copy this file to .env and customize for your environment

# =============================================================================
# LLM Configuration
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
LLM_OPENAI_BASE_URL=https://api.openai.com/v1
LLM_MODEL_NAME=gpt-4-turbo-preview
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.1
LLM_TIMEOUT_SECONDS=30
LLM_USE_MOCK_LLM=false

# =============================================================================
# Guardrails Configuration
# =============================================================================
GUARDRAILS_CONFIG_PATH=./app/guardrails/config.yml
GUARDRAILS_RAILS_PATH=./app/guardrails/rails
GUARDRAILS_ENABLE_BY_DEFAULT=true
GUARDRAILS_MOCK_MODE=false

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_PATH=./data/governance_agent.db
DATABASE_INIT_SCRIPT=./data/init_db.sql

# =============================================================================
# Security Configuration
# =============================================================================
SECURITY_AUDIT_ENABLED=true
SECURITY_PII_DETECTION=true
SECURITY_ACCESS_LOG_PATH=./logs/access.log

# =============================================================================
# Observability Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
TRACING_ENABLED=true
METRICS_ENABLED=true

# =============================================================================
# Server Configuration
# =============================================================================
SERVER_HOST=localhost
SERVER_PORT=8000
SERVER_RELOAD=true
SERVER_WORKERS=1

# =============================================================================
# Development Configuration
# =============================================================================
ENVIRONMENT=development
DEBUG=true