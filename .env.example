# Environment Configuration for Governance Agent
# Copy this file to .env and customize for your environment

# =============================================================================
# LLM Configuration
# =============================================================================
LLM_OPENAI_API_KEY=sk-your-openai-api-key-here
LLM_OPENAI_BASE_URL=https://api.openai.com/v1
LLM_MODEL_NAME=gpt-4-turbo-preview
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.1
LLM_TIMEOUT_SECONDS=30
LLM_USE_MOCK_LLM=true

# =============================================================================
# Guardrails Configuration
# =============================================================================
GUARDRAILS_CONFIG_PATH=./app/guardrails/config.yml
GUARDRAILS_RAILS_PATH=./app/guardrails/rails
GUARDRAILS_ENABLE_BY_DEFAULT=true
GUARDRAILS_BLOCK_ON_VIOLATION=true
GUARDRAILS_LOG_VIOLATIONS=true

# =============================================================================
# Database Configuration
# =============================================================================
DB_SQLITE_URL=sqlite:///./data/governance_agent.db
DB_MONGO_URL=mongodb://localhost:27017
DB_MONGO_DATABASE=governance_agent

# =============================================================================
# Security Configuration
# =============================================================================
SECURITY_SECRET_KEY=your-secret-key-change-in-production-please
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Role-based tool permissions (JSON arrays)
SECURITY_EMPLOYEE_ALLOWED_TOOLS=["search_internal_kb","create_ticket","web_search"]
SECURITY_ADMIN_ALLOWED_TOOLS=["search_internal_kb","create_ticket","get_user_profile","web_search","query_database","access_sensitive_docs"]

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_PER_MINUTE=60
API_CORS_ORIGINS=["*"]

# =============================================================================
# Observability Configuration
# =============================================================================
OBS_LOG_LEVEL=INFO
OBS_LOG_FORMAT=json
OBS_ENABLE_TRACING=true
OBS_TRACE_SAMPLING_RATE=1.0

# =============================================================================
# Environment Settings
# =============================================================================
ENVIRONMENT=development
DEBUG=true